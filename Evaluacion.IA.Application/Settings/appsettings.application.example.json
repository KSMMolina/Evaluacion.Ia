{
  "MediatR": {
    "EnableLogging": true,
    "EnablePerformanceTracking": true,
    "TimeoutSeconds": 30
  },

  "Validation": {
    "EnableValidation": true,
    "ValidateOnCreate": true,
    "ValidateOnUpdate": true,
    "StopOnFirstFailure": false
  },

  "Pagination": {
    "DefaultPageSize": 10,
    "MaxPageSize": 100,
    "MinPageSize": 1
  },

  "Cache": {
    "EnableCaching": true,
    "DefaultCacheDurationMinutes": 30,
    "MaxCacheDurationMinutes": 1440
  }
}
