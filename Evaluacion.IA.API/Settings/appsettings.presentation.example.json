{
  "JwtSettings": {
    "SecretKey": "your-super-secret-key-here-make-it-long-and-complex-for-production",
    "Issuer": "EvaluacionIA",
    "Audience": "EvaluacionIA-Users",
    "ExpirationHours": 24,
    "ValidateIssuerSigningKey": true,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true
  },

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "https://yourdomain.com"
    ],
    "AllowedMethods": [
      "GET",
      "POST", 
      "PUT",
      "DELETE",
      "OPTIONS"
    ],
    "AllowedHeaders": [
      "*"
    ],
    "AllowCredentials": true,
    "PolicyName": "DefaultCorsPolicy"
  },

  "Swagger": {
    "Enabled": true,
    "Title": "Evaluación IA API",
    "Version": "v1",
    "Description": "API para el sistema de evaluación con IA",
    "ContactName": "Equipo de Desarrollo",
    "ContactEmail": "dev@evaluacionia.com",
    "IncludeXmlComments": true,
    "EnableJwtAuthentication": true
  },

  "Controllers": {
    "EnableModelValidation": true,
    "SuppressAsyncSuffixInActionNames": true,
    "EnableEndpointRouting": true,
    "DefaultRoute": "api/[controller]"
  },

  "Json": {
    "PropertyNameCaseInsensitive": true,
    "IncludeFields": true,
    "WriteIndented": false
  },

  "RateLimit": {
    "Enabled": false,
    "RequestsPerMinute": 60,
    "RequestsPerHour": 1000,
    "ExemptEndpoints": []
  }
}
